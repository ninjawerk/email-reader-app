<div class="card">
	<h2>Connected Gmail Accounts</h2>
	<p>Add more by logging in with additional Google accounts in another browser session (MVP).</p>
	<ul>
		<% (accounts || []).forEach(a => { %>
			<li><%= a.email %> <small>(last checked: <%= a.lastCheckedAt || 'never' %>)</small></li>
		<% }) %>
	</ul>
</div>

<div class="card">
	<h2>Categories</h2>
	<p><a class="button" href="/categories/new">Add Category</a></p>
	<ul>
		<% (categories || []).forEach(c => { %>
			<li>
				<strong><a href="/emails/category/<%= c._id %>"><%= c.name %></a></strong>
				<div><%= c.description %></div>
			</li>
		<% }) %>
	</ul>
</div>
